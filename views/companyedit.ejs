<!DOCTYPE HTML>

<html>
 <head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />  
  <link rel="stylesheet" href="./assets/stylesheets/main.css">
  <title>Company Details</title>
 </head>
 
 <body>
  <!--<input type='hidden' name='where-from' value='details' />-->
  <form action='/editcompany' method='POST'>
    <input type="hidden" name="_method" value="PUT" />
  
    <div class='container-fluid'>
      <div class='row'>
        <div class='col-md-3'></div>
        <div class='col-md-4'>
        <!--<ul class='nav nav-pills pull-left'>
        <li class='active'><a href='details'>Details</a></li>
        <li><a href='programs'>Programs</a></li>
        <li><a href='settings'>Settings</a></li>
        </ul>
        -->
        </div>
        <div class='col-md-1'>
            <ul class='nav nav-pills pull-left'>
            <li><a href='/members'>Member List</a></li>
            </ul>    
        </div>
        <div class='col-md-1'>
        <ul class='nav nav-pills pull-left'>
          <li class='active'><a href='/companies'>Company List</a></li>
        </ul>    
        </div>
        <div class='col-md-3'></div>
      </div>
    </div>
      
    <div class='container-fluid'>
      <div class='page-header' style='text-align: center'>
        <div class='row'>
        <div class='col-md-3'></div>
        <div class='col-md-6'>
        <h1>Company Details Form</h1>
        </div>
        <div class='col-md-3'></div>
        </div>
      </div>

        <!-- Form Fields -->
        <%	
            var col1 = 'col-md-3';	//space left 
            var col2 = 'col-md-2';	//label 
            var col3 = 'col-md-4';	//input 
            var col4 = 'col-md-3';	//space right 
            console.log("in html: " + JSON.stringify(data));
        %>	
        <!-- Data -->
      <div class='row'>
        <div class='<%= col1 %>'></div>
        <div class='<%= col2 %>'>Company No</div>
        <div class='<%= col3 %>'><input type='text' name='_companyNo' readonly value='<%= data[0].CompanyNo %>' /></div>
        <div class='<%= col4 %>'></div>
      </div>

      <div class='row'>
        <div class='<%= col1 %>'></div>
        <div class='<%= col2 %>'>Description</div>
        <div class='<%= col3 %>'><input type='text' name='_companyDescription' value='<%= data[0].Description %>' /></div>
        <div class='<%= col4 %>'></div>
      </div>	

      <br>

      <div class='row'>
        <div class='col-md-4'></div>
        <div class='col-md-4'> 
          <input type="submit" value="Update" style="width:100%">
        </div>
        <div class='col-md-4'> </div>
      </div>

    </div>       
  </form>
 </body>
</html>